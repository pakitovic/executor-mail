{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "@runnerty-executor-mail",
  "definitions": {
    "config": {
      "type": "object",
      "required": ["id", "type", "transport"],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "@runnerty-executor-mail"
        },
        "disable": {
          "type": "boolean"
        },
        "devMode": {
          "type": "boolean",
          "description": "Enable dev mode to override emails destinations config in processes"
        },
        "devOptions": {
          "type": ["object"],
          "properties": {
            "from": {
              "type": "string"
            },
            "to": {
              "type": "array"
            },
            "cc": {
              "type": "array"
            },
            "bcc": {
              "type": "array"
            }
          }
        },
        "from": {
          "type": "string"
        },
        "to": {
          "type": "array"
        },
        "cc": {
          "type": "array"
        },
        "bcc": {
          "type": "array"
        },
        "transport": {
          "type": ["string", "object"],
          "properties": {
            "service": {
              "type": "string",
              "enum": ["SES"]
            },
            "region": {
              "type": "string"
            },
            "ses": {
              "type": "object"
            }
          }
        },
        "templateDir": {
          "type": "string"
        },
        "template": {
          "type": "string"
        },
        "partialsDir": {
          "type": "string",
          "description": "Ejs partials folder"
        },
        "partials": {
          "type": "string",
          "description": "Ejs partials pieces folder"
        },
        "ejsRender": {
          "type": "boolean"
        }
      }
    },
    "params": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "to": {
          "type": "array"
        },
        "cc": {
          "type": "array"
        },
        "bcc": {
          "type": "array"
        },
        "title": {
          "type": "string",
          "description": "Deprecated, use subject instead"
        },
        "subject": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "contentType": {
                "type": "string"
              },
              "encoding": {
                "type": "string"
              },
              "raw": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
